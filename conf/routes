# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                   controllers.Application.index()
GET         /model/load/:path                   controllers.Application.loadModel(path: String)
POST        /model/setevidence                  controllers.Application.setEvidence()
POST        /model/setvirtualevidence           controllers.Application.setVirtualEvidence()
GET         /model/clearallevidence             controllers.Application.clearAllEvidence()
GET         /model/clearevidence/:nodeID        controllers.Application.clearEvidence(nodeID: String)
GET         /model/setastarget/:nodeID          controllers.Application.setAsTarget(nodeID: String)
GET         /model/removetarget/:nodeID         controllers.Application.removeTarget(nodeID: String)
GET         /model/clearalltargets              controllers.Application.clearAllTargets()
GET         /model/cpt/:nodeID                  controllers.Application.getCPT(nodeID: String)
POST        /model/uploadmodel                  controllers.Application.uploadModel(updateModleFile: Boolean, updateDataFile: Boolean, isModelPublic: Boolean,isDataPublic: Boolean, modelSharedByArray: String, rawdataSharedByArray: String )
POST        /model/checkmodel                   controllers.Application.checkModel()
POST        /model/deletemodel/:modelName       controllers.Application.deleteModel(modelName: String)
GET         /model/getmodelstatus/:modelName    controllers.Application.getModelStatus(modelName: String)
GET         /model/getmodelhistory/:modelName   controllers.Application.getModelHistory(modelName: String)
#GET        /shared                             controllers.Application.shared()
#GET        /network/:loadFileName              controllers.Application.network(loadFileName: String)
GET         /network/:dataType                  controllers.Application.network(dataType: String)
GET         /login                              controllers.Application.login()
POST        /authenticate                       controllers.Application.authenticate()
GET         /register                           controllers.Application.register()
POST        /saveRegistration                   controllers.Application.saveRegistration()
GET         /logout                             controllers.Application.logout()
GET         /changePassword                     controllers.Application.changePassword()
POST        /saveNewPassword                    controllers.Application.saveNewPassword()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                       controllers.Assets.at(path="/public", file)